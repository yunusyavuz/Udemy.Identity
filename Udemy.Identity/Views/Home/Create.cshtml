@model UserCreateModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<form asp-action = "Create" asp-controller = "Home"  method="post" class = "p-4 w-75 mx-auto shadow">

<div class = "mb-3">
 <label>Kullanıcı Adi: </label>
 <span class= "text-danger" asp-validation-for="@Model.Username"></span>
 <input asp-for="@Model.Username" class = "form-control"/>
</div>

<div class = "mb-3">
 <label>Şifre: </label>
  <span class= "text-danger" asp-validation-for="@Model.Password"></span>
 <input type="password" asp-for="@Model.Password" class = "form-control"/>
</div>

<div class = "mb-3">
 <label>Şifre Tekrar: </label>
  <span class= "text-danger" asp-validation-for="@Model.ConfirmPassword"></span>
 <input type="password" asp-for="@Model.ConfirmPassword" class = "form-control"/>
</div>


<div class = "mb-3">
 <label>Email: </label>
  <span class= "text-danger" asp-validation-for="@Model.Email"></span>
 <input  asp-for="@Model.Email" class = "form-control"/>
</div>

<div class = "mb-3">
 <label>Cinsiyet: </label>
  <span class= "text-danger" asp-validation-for="@Model.Gender"></span>
 <input  asp-for="@Model.Gender" class = "form-control"/>
</div>


<div class = "mb-3">
 <button type="submit" class = "btn btn-primary" >Kaydet</button>
</div>
<div class="text-danger mt-2" asp-validation-summary="ModelOnly"></div>>

</form>